generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  teams     Team[]   @relation("UserTeams")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  members   User[]   @relation("UserTeams")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
}
